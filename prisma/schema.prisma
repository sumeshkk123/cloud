generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model faqs {
  id         String
  question   String
  answer     String
  locale     String   @default("en")
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  categoryId String?

  @@id([id, locale])
  @@index([locale])
  @@index([categoryId])
}

model faq_categories {
  id        String
  name      String
  slug      String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  icon      String?

  @@id([id, locale])
  @@unique([slug, locale])
  @@index([locale])
  @@index([slug])
}

model global_settings {
  id                  String   @id @default(cuid())
  locale              String   @unique @default("en")
  siteName            String
  siteTagline         String?
  metadataTitle       String?
  metadataDescription String?
  metadataKeywords    String?
  languageLabel       String?
  languageAriaLabel   String?
  primaryNav          Json?
  headerCta           Json?
  languageLinks       Json?
  footerColumns       Json?
  footerCta           Json?
  footerContacts      Json?
  footerBottomLinks   Json?
  contactEmail        String?
  contactPhone        String?
  socialLinks         Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([locale])
}

model homepage_content {
  id        String   @id @default(cuid())
  locale    String   @unique @default("en")
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([locale])
}

model blog_posts {
  id                String
  slug              String
  title             String
  description       String
  content           String
  date              DateTime @default(now())
  image             String?
  author            String?
  locale            String   @default("en")
  published         Boolean  @default(false)
  metaTitle         String?
  metaDescription   String?
  metaKeywords      String?
  translationGroupId String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@id([id, locale])
  @@index([locale])
  @@index([published])
  @@index([slug])
  @@index([id])
}

model contact_submissions {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String?
  country    String?
  message    String
  source     String   @default("contact")
  notes      String?
  locale     String   @default("en")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  sourceSite String?  @map("source_site")
}

model demo_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model mlm_plan_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model module_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model services_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model contact_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model features_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model demo_items {
  id                       String   @id @default(cuid())
  image                    String?
  locale                   String   @default("en")
  createdAt                DateTime @default(now())
  updatedAt                DateTime
  adminDemoFeatures        Json?
  adminDemoTitle           String?
  distributorsDemoFeatures Json?
  distributorsDemoTitle    String?
  icon                     String?
  title                    String?
  showOnHomePage           Boolean  @default(false)

  @@index([locale])
  @@index([showOnHomePage])
}

model features {
  id             String
  slug           String?
  title          String
  description    String
  icon           String?
  category       String
  hasDetailPage  Boolean  @default(false)
  showOnHomePage Boolean  @default(false)
  locale         String   @default("en")
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  features       Json?

  @@id([id, locale])
  @@unique([slug, locale])
  @@index([category])
  @@index([locale])
  @@index([showOnHomePage])
}

model meta_details {
  id          String   @id @default(cuid())
  page        String
  locale      String   @default("en")
  title       String
  description String
  keywords    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([page, locale])
}

model mlm_plans {
  id             String   @id @default(cuid())
  slug           String?
  title          String
  description    String
  locale         String   @default("en")
  showOnHomePage Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  icon           String?
  subtitle       String?
  features       Json?
  groupId        String?

  @@index([groupId])
  @@index([locale])
  @@index([showOnHomePage])
  @@index([slug])
  @@unique([slug, locale])
}

model modules {
  id             String   @id @default(cuid())
  slug           String?
  title          String
  description    String
  image          String?
  showOnHomePage Boolean  @default(false)
  locale         String   @default("en")
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@index([locale])
  @@index([showOnHomePage])
  @@index([slug])
  @@unique([slug, locale])
}

model industry_solutions {
  id             String   @id @default(cuid())
  slug           String?
  title          String
  description    String
  icon           String
  showOnHomePage Boolean  @default(false)
  locale         String   @default("en")
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@unique([title, locale])
  @@index([locale])
  @@index([showOnHomePage])
  @@index([slug])
}

model page_titles {
  id              String   @id @default(cuid())
  page            String
  locale          String   @default("en")
  title           String
  pagePill        String?
  sectionSubtitle String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime

  @@unique([page, locale])
  @@index([locale])
}

model services {
  id                String   @id @default(cuid())
  title             String
  description       String
  content           String?
  image             String?
  icon              String?
  showOnHomePage    Boolean  @default(false)
  locale            String   @default("en")
  createdAt         DateTime @default(now())
  updatedAt         DateTime
  keyBenefits       Json?
  serviceHighlights Json?

  @@index([locale])
  @@index([showOnHomePage])
}

model testimonials {
  id        String   @id @default(cuid())
  name      String
  role      String?
  content   String
  image     String?
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([locale])
}

model stories {
  id         String   @id @default(cuid())
  title      String
  content    String
  count      String?
  screenshot String?
  locale     String   @default("en")
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([locale])
}

model users {
  id          String            @id @default(cuid())
  email       String            @unique
  name        String
  password    String
  image       String?
  role        String            @default("admin")
  permissions Json?
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  activities  user_activities[]
}

model contact_addresses {
  id        String   @id @default(cuid())
  country   String
  address   String
  phones    Json
  email     String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime
  place     String?
  whatsapp  String?
  flag      String?

  @@index([locale])
}

model changelog_entries {
  id          String   @id @default(cuid())
  version     String
  title       String?
  description String
  features    Json
  locale      String   @default("en")
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@unique([version, locale])
  @@index([locale])
  @@index([order])
}

model user_activities {
  id          String   @id @default(cuid())
  userId      String
  action      String
  description String
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  user        users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([action])
}

model pricing_otps {
  id        String   @id @default(cuid())
  email     String   @unique
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

model connectors {
  id          String
  sliderTitle String   @default("Default Slider")
  title       String
  locale      String   @default("en")
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@id([id, locale])
  @@index([locale])
  @@index([sliderTitle, locale])
}

model ai_copilots {
  id        String   @id @default(cuid())
  icon      String?
  title     String
  content   String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([locale])
}

model integrations {
  id          String
  icon        String?
  title       String
  description String
  connectors  Json?
  locale      String   @default("en")
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@id([id, locale])
  @@index([locale])
}
