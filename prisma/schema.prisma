generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  categoryId String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
  @@index([categoryId])
}

model faq_categories {
  id          String
  name        String
  slug        String
  icon        String?
  locale      String   @default("en")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@id([id, locale])
  @@unique([slug, locale])
  @@index([locale])
  @@index([slug])
}

model global_settings {
  id              String   @id @default(cuid())
  locale          String   @default("en")
  siteName        String
  siteTagline     String?
  metadataTitle   String?
  metadataDescription String?
  metadataKeywords String?
  languageLabel   String?
  languageAriaLabel String?
  primaryNav      Json?
  headerCta       Json?
  languageLinks   Json?
  footerColumns   Json?
  footerCta       Json?
  footerContacts  Json?
  footerBottomLinks Json?
  contactEmail    String?
  contactPhone    String?
  socialLinks     Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([locale])
  @@index([locale])
}

model homepage_content {
  id        String   @id @default(cuid())
  locale    String   @default("en")
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([locale])
  @@index([locale])
}

model blog_posts {
  id             String
  slug           String
  title          String
  description    String
  content        String
  date           DateTime @default(now())
  image          String?
  author         String?
  locale         String   @default("en")
  published      Boolean  @default(false)
  metaTitle      String?
  metaDescription String?
  metaKeywords   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@id([id, locale])
  @@index([locale])
  @@index([published])
  @@index([slug])
  @@index([id])
}

model contact_submissions {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  country   String?
  message   String
  source    String   @default("contact")
  notes     String?
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model demo_faqs {
  id        String   @id @default(cuid())
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([locale])
}

model mlm_plan_faqs {
  id        String   @id @default(cuid())
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([locale])
}

model module_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model services_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model contact_faqs {
  id        String
  question  String
  answer    String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id, locale])
  @@index([locale])
}

model demo_items {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  locale      String   @default("en")
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@index([locale])
}

model features {
  id             String
  slug           String?
  title          String
  description    String
  icon           String?
  category       String
  hasDetailPage  Boolean  @default(false)
  showOnHomePage Boolean  @default(false)
  locale         String   @default("en")
  metaTitle      String?
  metaDescription String?
  metaKeywords   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@id([id, locale])
  @@unique([slug, locale])
  @@index([category])
  @@index([locale])
  @@index([showOnHomePage])
}

model meta_details {
  id          String   @id @default(cuid())
  page        String
  locale      String   @default("en")
  title       String
  description String
  keywords    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([page, locale])
}

model mlm_plans {
  id             String   @id @default(cuid())
  slug           String
  title          String
  description    String
  content        String?
  image          String?
  locale         String   @default("en")
  published      Boolean  @default(false)
  showOnHomePage Boolean  @default(false)
  metaTitle      String?
  metaDescription String?
  metaKeywords   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@unique([slug, locale])
  @@index([slug])
  @@index([locale])
  @@index([published])
  @@index([showOnHomePage])
}

model modules {
  id             String   @id @default(cuid())
  slug           String?  @unique
  title          String
  description    String
  image          String?
  hasDetailPage  Boolean  @default(false)
  showOnHomePage Boolean  @default(false)
  locale         String   @default("en")
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@index([hasDetailPage])
  @@index([locale])
  @@index([showOnHomePage])
  @@index([slug])
}

model industry_solutions {
  id              String   @id @default(cuid())
  title           String
  description     String
  icon            String
  showOnHomePage  Boolean  @default(false)
  locale          String   @default("en")
  createdAt       DateTime @default(now())
  updatedAt       DateTime

  @@unique([title, locale])
  @@index([locale])
  @@index([showOnHomePage])
}

model page_titles {
  id              String   @id @default(cuid())
  page            String
  locale          String   @default("en")
  title           String
  pagePill        String?
  sectionSubtitle String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime

  @@unique([page, locale])
  @@index([locale])
}

model services {
  id                String   @id @default(cuid())
  title             String
  description       String
  content           String?
  image             String?
  icon              String?
  keyBenefits       Json?
  serviceHighlights Json?
  showOnHomePage    Boolean  @default(false)
  locale            String   @default("en")
  createdAt         DateTime @default(now())
  updatedAt         DateTime

  @@index([locale])
  @@index([showOnHomePage])
}

model testimonials {
  id        String   @id @default(cuid())
  name      String
  role      String?
  content   String
  image     String?
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([locale])
}

model users {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  password    String
  image       String?
  role        String   @default("admin")
  permissions Json?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  activities user_activities[]
}

model contact_addresses {
  id        String   @id @default(cuid())
  country   String
  place     String?  // Place/City name (optional)
  address   String
  phones    Json     // Array of phone numbers stored as JSON
  whatsapp  String?  // WhatsApp number (optional)
  email     String
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([locale])
}

model changelog_entries {
  id          String   @id @default(cuid())
  version     String   // e.g., "3.0", "2.0", "1.0"
  title       String?  // Optional title for the version
  description String   // Main description text
  features    Json     // Array of feature strings stored as JSON
  locale      String   @default("en")
  order       Int      @default(0) // For ordering versions (higher = newer)
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@index([locale])
  @@index([order])
  @@unique([version, locale])
}

model user_activities {
  id          String   @id @default(cuid())
  userId      String
  action      String   // e.g., "login", "create_blog", "update_user", etc.
  description String   // Human-readable description
  metadata    Json?    // Additional data (JSON)
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  user        users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([action])
}

model pricing_otps {
  id        String   @id @default(cuid())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
  @@unique([email])
}
