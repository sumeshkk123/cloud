# Copy to infra/weblate/.env and customise for your environment
WEBLATE_SECRET_KEY=dev-weblate-secret-key
WEBLATE_ADMIN_EMAIL=admin@example.com
WEBLATE_ADMIN_PASSWORD=changeme
WEBLATE_SITE_DOMAIN=127.0.0.1:8090
WEBLATE_SITE_URL=http://127.0.0.1:8090/
WEBLATE_ALLOWED_HOSTS=*
WEBLATE_EMAIL_FROM="Weblate <noreply@mlmsoftwarehub.local>"
WEBLATE_EMAIL_HOST=localhost
WEBLATE_EMAIL_PORT=25
WEBLATE_TIME_ZONE=UTC
WEBLATE_LANGUAGE_CODE=en
WEBLATE_ENABLE_HTTPS=False

DATABASE_URL=postgres://weblate:weblate@weblate-db:5432/weblate
POSTGRES_DB=weblate
POSTGRES_USER=weblate
POSTGRES_PASSWORD=weblate
POSTGRES_HOST=weblate-db
REDIS_URL=redis://weblate-redis:6379/0
CACHE_URL=redis://weblate-redis:6379/1
CELERY_BROKER_URL=redis://weblate-redis:6379/2
BROKER_URL=redis://weblate-redis:6379/2
