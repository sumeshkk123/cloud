{
    "collectionName": "components_blocks_cta_sections",
    "info": {
        "displayName": "CTA Section",
        "icon": "mouse-pointer",
        "description": "Call to Action section"
    },
    "options": {},
    "attributes": {
        "theme": {
            "type": "enumeration",
            "enum": [
                "light",
                "dark",
                "muted"
            ],
            "default": "light"
        },
        "kicker": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "text"
        },
        "note": {
            "type": "string"
        },
        "ctas": {
            "type": "component",
            "repeatable": true,
            "component": "shared.link"
        },
        "media": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "align": {
            "type": "enumeration",
            "enum": [
                "start",
                "center",
                "end"
            ],
            "default": "center"
        },
        "items": {
            "type": "component",
            "repeatable": true,
            "component": "shared.section-item"
        }
    }
}