{
  "kind": "collectionType",
  "collectionName": "pricing_submissions",
  "info": {
    "singularName": "pricing-submission",
    "pluralName": "pricing-submissions",
    "displayName": "Pricing Submission",
    "description": "User submissions requesting pricing access"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "contact": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "minLength": 3
    },
    "country": {
      "type": "string",
      "required": true
    },
    "otpHash": {
      "type": "string",
      "configurable": false
    },
    "otpExpiresAt": {
      "type": "datetime",
      "configurable": false
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "metadata": {
      "type": "json"
    }
  }
}
