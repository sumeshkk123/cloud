{
    "kind": "collectionType",
    "collectionName": "blog_categories",
    "info": {
        "singularName": "blog-category",
        "pluralName": "blog-categories",
        "displayName": "Blog Category",
        "description": "Categories for blog posts"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "translate": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text",
            "translate": true
        }
    }
}